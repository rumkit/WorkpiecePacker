<Window x:Class="Packer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Packer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer>
            <Canvas x:Name="RectanglesCanvas" Height="2000" Width="350" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="LightGray"/>
        </ScrollViewer>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                <Label Content="Высота"></Label>
                <TextBox x:Name="HeighTextBox" Width="50"></TextBox>
            </StackPanel>
            <StackPanel  Margin="0,5,0,5" Orientation="Horizontal">
                <Label Content="Ширина"></Label>
                <TextBox x:Name="WidthTextBox" Margin="10,0,0,0" Width="50"/>
            </StackPanel>
            <Button Content="Установить" MaxWidth="150" Margin="5,5,5,5" Click="ResizeCanvasButton_Click"></Button>
            <TextBox x:Name="RectanglesTextBox" MinHeight="200" AcceptsReturn="True" TextWrapping="NoWrap"/>
            <Button Content="Action" Click="ActionButton_Click" Margin="5,5,5,5"></Button>
        </StackPanel>

    </Grid>
</Window>
